{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}



        <div class="col-12 mt-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="/rubrique/{{sousRubrique.rubrique.id}}"> {{ sousRubrique.rubrique.nomRubrique }}</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{sousRubrique.nomsousRubrique}}</li>
                </ol>
            </nav>
        </div>
        

<h1>{{ sousRubrique.nomsousRubrique }}</h1>

        {% for produit in sousRubrique.produits %}
            <div class="col-12 col-sm-6 col-md-4 col-xl-3 col-xxl-2 rubrique mt-3">
                <a href="/produit/{{ produit.id }}">
                        <div class="card" style="">
                            <img class="card-img-top img-fluid imgcard" src="{{ asset(produit.photo ?: 'images/placeholder.png') }}" alt="{{ produit.libelleCourt}}">
                            <div class="card-body">
                                <h5 class="card-title">{{ produit.libelleCourt }}</h5>
                                <p class="card-text"></p>
                            </div>
                        </div>
                </a>
            </div>
            
        {% endfor %}
    </div>
</div>
{% endblock %}
