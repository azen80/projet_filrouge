{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}

{% block body %}


     {% if panier is empty %}
    <p>Panier vide.</p>
    {% endif %}

    {% for elt in panier %}

<div class="card" style="width: 18rem;">
    <img class="card-img-top imgcard" src="{{ asset(elt.produit.photo) }}" alt="{{ elt.produit.libelleCourt }}">

</div>

    
        <div>
        {{ elt.produit.libelleCourt }}
        <br>
        {{ elt.quantite }}
        <a class="btn btn-primary" href="/panier/add/{{ elt.produit.id }}">++</a>
        <a class="btn btn-primary" href="/panier/del/{{ elt.produit.id }}">--</a>
        </div>
        
    {% endfor %}

{% endblock %}
